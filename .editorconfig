# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

[*.{c,h}]
indent_size = 2
indent_style = space

[*.md]
indent_style = space
trim_trailing_whitespace = false

[*.html]
indent_size = 2
indent_style = space

[Makefile]
indent_style = tab
